# File manipulations
alias ls='ls --color=always'
alias ll='ls -alF'

# Apt
alias ai='sudo apt-get install --assume-yes'
alias as='sudo apt-cache search'
alias ap='sudo apt-cache policy'
alias ar='sudo apt-get --purge remove'
alias au='sudo apt-get update'
alias ad='sudo apt-cache depends'
alias al='sudo dpkg -l | grep'

# less & grep
alias l='fc -s | less -S'
# alias g='fc -s | grep --color=always'

# Utils
alias q='exit'
alias cl='clear'
alias cat='cat -n'
alias udb='sudo updatedb'
alias loc='locate'
alias rbt='sudo reboot'
alias blk='sudo blkid'
alias src='source ~/.zshrc'
alias uz='aunpack'
alias fnd='grep --color=always -rnw . -e'
alias ctrl='setxkbmap -option ctrl:nocaps'
alias py='python3'
alias getip='curl orga.cat/ip'
alias lines='cloc .'
alias xclip='xclip -selection c'
getiip() {
	ip addr | grep 'state UP' -A2 | tail -n1 | awk '{print $2}' | cut -f1 -d'/'
}
alias rmidi='receivemidi'
alias wallet='cd ~/crypto/monero-v0.10.3.1/ && ./wallet'
alias wiki='vim ~/wiki/index.md'

# Ranger
alias gh='ranger ~'
alias gdw='ranger ~/downloads/'
alias gdo='ranger ~/documents/'
alias gco='ranger ~/code/'
alias gr='ranger /'
alias gd='ranger /dev/'
alias ge='ranger /etc/'
alias gu='ranger /usr/'
alias gi='ranger /usr/include/'
alias gm='ranger /mnt/'
alias mt='ranger ~/mt/'

# Brightness
alias b1='xbacklight -set 20'
alias b2='xbacklight -set 40'
alias b3='xbacklight -set 60'
alias b4='xbacklight -set 80'
alias b5='xbacklight -set 100'

# Config files
alias ea='vim ~/config/aliases'
alias ev='vim ~/config/vimrc'
alias ei='vim ~/config/i3rc'
alias er='vim ~/config/rangerrc'
alias ez='vim ~/.zshrc'
