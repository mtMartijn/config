# File manipulations
alias ls='ls --color=always'
alias ll='ls -alF'

# Apt
alias ai='sudo apt-get install --assume-yes'
alias as='sudo apt-cache search'
alias ar='sudo apt-get --purge remove'
alias au='sudo apt-get update'

# less & grep
alias l='fc -s | less -S'
# alias g='fc -s | grep --color=always'

# Utils
alias q='exit'
alias cl='clear'
alias udb='sudo updatedb'
alias loc='locate'
alias rbt='sudo reboot'
alias blk='sudo blkid'
alias src='source ~/.zshrc'
alias unp='aunpack'
alias getip='curl orga.cat/ip'
getiip() {
	ip addr | grep 'state UP' -A2 | tail -n1 | awk '{print $2}' | cut -f1 -d'/'
}

# Ranger
alias gh='ranger ~'
alias gdw='ranger ~/downloads/'
alias gdo='ranger ~/documents/'
alias gvi='ranger ~/videos/'
alias gpi='ranger ~/pictures/'
alias gco='ranger ~/code/'
alias gpr='ranger ~/programs/'
alias gap='ranger ~/code/OF_v0.8.4/apps/myApps/'
alias gr='ranger /'
alias gd='ranger /dev/'
alias ge='ranger /etc/'
alias gu='ranger /usr/'
alias gm='ranger /media/'

# Brightness
alias b1='xbacklight -set 20'
alias b2='xbacklight -set 40'
alias b3='xbacklight -set 60'
alias b4='xbacklight -set 80'
alias b5='xbacklight -set 100'

# Config files
alias ea='vim ~/.aliases'
alias ez='vim ~/.zshrc'
alias ev='vim ~/.vimrc'
alias ei='vim ~/.i3/config'
alias er='vim ~/.config/ranger/rc.conf'

# gpg & tor
alias torb='sh ~/programs/tor-browser/Browser/start-tor-browser'

