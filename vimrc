set nocompatible
filetype off

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'ervandew/supertab'
Plugin 'majutsushi/tagbar'

call vundle#end()
filetype plugin indent on

colorscheme monokai

syntax on

set relativenumber
set number

" Key mappings
nmap ; :
imap jk <Esc>

nmap <c-w> ZZ
imap <c-w> jkZZ

nmap <CR> O<ESC>j
inoremap {<CR> {<CR>}<C-o>0
